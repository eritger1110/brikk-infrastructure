# Docker Environment Variables Example
# Copy this file to .env.docker and customize for your local environment
# Usage: docker-compose --env-file .env.docker up

# Flask Configuration
FLASK_APP=src.main:app
FLASK_ENV=development
FLASK_DEBUG=1

# Database Configuration
POSTGRES_DB=brikk_dev
POSTGRES_USER=brikk
POSTGRES_PASSWORD=brikk_dev_password
DATABASE_URL=postgresql://brikk:brikk_dev_password@postgres:5432/brikk_dev

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Security (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=dev-secret-key-change-in-production
JWT_SECRET_KEY=dev-jwt-secret-change-in-production

# API Configuration
API_TITLE=Brikk Infrastructure API
API_VERSION=1.0.0

# Logging
LOG_LEVEL=INFO
JSON_LOGS=true

# Development Settings
TESTING=false
DEBUG=true

