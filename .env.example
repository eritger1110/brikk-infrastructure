# Brikk Infrastructure Environment Configuration

# Database Configuration
DATABASE_URL=sqlite:///src/database/app.db
SQLALCHEMY_DATABASE_URI=sqlite:///src/database/app.db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ACCESS_TOKEN_EXPIRES=3600

# Security Configuration
BRIKK_GLOBAL_HMAC_KEY=your-global-hmac-key-here
BRIKK_ADMIN_TOKEN=your-admin-token-here

# Feature Flags
BRIKK_FEATURE_PER_ORG_KEYS=false
BRIKK_IDEM_ENABLED=true
BRIKK_ALLOW_UUID4=false

# Rate Limiting Configuration
BRIKK_RLIMIT_ENABLED=false
BRIKK_RLIMIT_PER_MIN=60
BRIKK_RLIMIT_BURST=20
BRIKK_RLIMIT_SCOPE=org

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=true
SECRET_KEY=your-flask-secret-key-here

# Security Headers
ENABLE_TALISMAN=1

# Logging
LOG_LEVEL=INFO
